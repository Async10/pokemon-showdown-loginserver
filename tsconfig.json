{
  "compilerOptions": {
    "lib": ["es2020"],
    "target": "es6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "outDir": "./.dist",
    "incremental": true,
    "allowUnreachableCode": false,
    "esModuleInterop": true,
    "noImplicitAny": true,
  },
  "types": ["node"],
  "include": [
    "./src/*", "./src/test/*",
  ],
}
